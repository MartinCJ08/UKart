<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <ImageView
        android:id="@+id/imgIconMyShopping"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:src="@mipmap/ic_basket"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="7"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtNameMyShopping"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Zucaritas"
            android:textColor="#000"
            android:textSize="30dp"
            android:textStyle="bold"
            android:gravity="center"/>

        <TextView
            android:id="@+id/txtDescMyShopping"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="DescripciÃ³n"
            android:gravity="center"/>

        <TextView
            android:id="@+id/txtPriceMyShopping"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="$50"
            android:gravity="center"/>

    </LinearLayout>


</LinearLayout>