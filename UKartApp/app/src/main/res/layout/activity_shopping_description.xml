<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ShoppingDescriptionActivity"
    android:padding="16dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgShopDesc"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:src="@mipmap/ic_basket"/>

    <TextView
        android:id="@+id/txtShopDescDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha: "
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_gravity="right"
        android:textColor="#000"/>

    <TextView
        android:id="@+id/txtShopDescPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total: $"
        android:textStyle="bold"
        android:textSize="25dp"
        android:textColor="#000"/>

    <TextView
        android:id="@+id/txtShopDescQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cantidad de productos: "
        android:textStyle="bold"
        android:textSize="25dp"
        android:textColor="#000"/>

    <ListView
        android:id="@+id/listShopping"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>